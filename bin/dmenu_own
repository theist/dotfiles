#!/bin/bash
DMENU='wmenu -b'
MENU_FILE=${HOME}/.config/quick.menu

SELECTED=`cat ${MENU_FILE} | cut -d: -f1 | ${DMENU} -f 'Retro Computer Regular 10' -N '#000000' -n '#003300' -s '#000000' -s '#00ff00'`

COMMAND=`cat ${MENU_FILE} | grep -e ^${SELECTED}: | cut -f2 -d:`

echo "'${COMMAND}'"

eval "${COMMAND}"
